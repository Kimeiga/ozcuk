{
  "name": "ozcuk",
  "version": "1.0.0",
  "description": "Özcük - The best Turkish dictionary web app",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "deploy": "npm run build && wrangler pages deploy .svelte-kit/cloudflare",
    "db:create": "wrangler d1 create ozcuk-db",
    "db:migrate": "wrangler d1 migrations apply ozcuk-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply ozcuk-db --remote"
  },
  "keywords": [
    "turkish",
    "dictionary",
    "language-learning",
    "morphology"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260219.0",
    "@sveltejs/adapter-cloudflare": "^7.2.8",
    "@sveltejs/kit": "^2.52.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tailwindcss/vite": "^4.2.0",
    "svelte": "^5.53.0",
    "svelte-check": "^4.4.1",
    "tailwindcss": "^4.2.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "wrangler": "^4.67.0"
  },
  "dependencies": {
    "nanoid": "^5.1.6"
  }
}
